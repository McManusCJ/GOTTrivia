
<nav class="grey darken-4">
		<div style="font-size:48px; font-family:algerian;" class="center">The winter is coming...</div>
</nav><br/><br/><br/>
<div class="row" style="alignItems:center">
	<div class="container">
		<div class="col l12 s12 m12" id='final'>
			<% var cont = 0;%>
			<%for(var question of questions){%>
						<%cont ++;%>
					<div id="div<%=cont%>" hidden>
							<center>
									<strong style="background-color: #826D20; align:center; font-size:30px; font-family:algerian;"><%=question.question%></strong>
							</center>
							<center>
									<fieldset style="background-color:black; color:white;">
											<center>
												<strong style="font-size:22px; font-family:algerian;">
														<%if(question.media != null){%>
																<br/><img src='images/houseBanners/<%=question.media%>' width='100' height='100'/>
														<%}%>
														<br/><br/><span>A) <%=question.answer1%></span>
														<br/><br/><span>B) <%=question.answer2%></span>
														<br/><br/><span>C) <%=question.answer3%></span>
														<br/><br/><span>D) <%=question.answer4%></span>
														<div id='score' hidden></div>
														<input type='hidden' value='<%=question.correctAnswer%>'/>
												</strong>
											</Center><br/>
									</fieldset>
							</center>
					</div>
			<%}%>
		</div>
	</div>
</div>
<script>

		$(document).on('click', 'span', (ev) => {
				var answerUsu = $(ev.target).html();
	 			var correctAnswer = $(ev.target).siblings().last().val();
				if (answerUsu === 'A) ' + correctAnswer || answerUsu === 'B) ' + correctAnswer || answerUsu === 'C) ' + correctAnswer || answerUsu === 'D) ' + correctAnswer){
					$(ev.target).attr("style","background-color:#11D542;");
					var score = $('#score').html();
					var scorePlus = score + 1;
					$('#score').html(scorePlus);
				}
				else{
					$(ev.target).attr("style","background-color:#E41D1D;");
				}
		});

		$(document).ready(() => {
			$('body').attr('style',"background-image:url('images/gameWallpaper/throne.jpg'); background-position:center; background-repeat:no-repeat;background-attachment:fixed;background-size:cover;");
			$('#div1').removeAttr('hidden');
			var n = 2;
			setInterval( () => {
						if(n < 11){
							var m = n-1;
							var selectorFirst = "#div" + n;
							var selectorSecond = "#div" + m;
							$(selectorFirst).removeAttr('hidden');
							$(selectorSecond).attr("hidden","hidden");
						}
						else{
								var scoreFinal = $('#score').html().length;
								$("#final").html("<div style='background-color: #826D20; font-size:36px; font-family:algerian;' class='center'><h2>El juego termino...</h2>Obtuviste " + scoreFinal + " aciertos</div>");
								clearInterval();
						}
						n ++;
			},1500,n);
		});

</script>
